@model Product
@{
    Layout = "_ProductLayout";
}

<title>abz | @Model.Name</title>

<div class="container">
    <div class="single_product" style="background-color:white">
        <div class="container-fluid" style="padding:20px; background-color:white">
            <div class="row">
                <div class="col-lg-6 order-lg-3 order-1" style="border-right:1px solid lightgray; padding-right:50px;">

                    <!-- Slider -->
                    <div id="content-wrapper">

                        <div class="column">
                            <img id=featured src="~/img/@Model.Image1">

                            <div id="slide-wrapper">
                                <img id="slideLeft" class="arrow" src="~/img/arrow-left.png">

                                <div id="slider">
                                    <img class="thumbnail active" src="~/img/@Model.Image1">
                                    <img class="thumbnail" src="~/img/@Model.Image2">
                                    <img class="thumbnail" src="~/img/@Model.Image3">
                                </div>

                                <img id="slideRight" class="arrow" src="~/img/arrow-right.png">
                            </div>
                        </div>
                    </div>
                    <!-- End of Slider -->

                </div>

                <div class="col-lg-6 order-3" style="padding-left:20px">
                    <div class="product_description">

                        <div class="product_name">@Model.Name</div>
                        <div class="product-rating">
                            <span class="badge badge-danger"><i class="fa fa-star"></i> Popüler</span>
                            <span class="badge badge-warning"><i class="fa fa-truck"></i> Ücretsiz Kargo</span>

                        </div>

                        <div>
                            <span class="product_price">@Model.UnitPrice.ToString("C")</span>
                            <strike class="product_discount">
                                <span style='color: black'>@Model.RealPrice?.ToString("C")</span>
                            </strike>
                        </div>

                        <div>
                            <span class="product_saved">Kazancınız:</span> <span style='color: black'>@( (Model.RealPrice - Model.UnitPrice )?.ToString("C"))</span>
                        </div>

                        <hr class="singleline">
                        <div>
                            <span class="product_info"><i class="fa fa-truck"></i> Ücretsiz Kargo</span><br>
                            <span class="product_info"><i class="fa fa-plus"></i> 2+1 Yıl Garanti</span><br>
                            <span class="product_info"><i class="fa fa-refresh"></i> Kolay İade</span><br>
                        </div>
                        <div>
                            <div class="row" style="margin-top: 15px;">
                                <div class="col-xs-6" style="margin-left: 15px;">
                                    <span class="product_options">Bellek</span><br>
                                    <button class="btn btn-primary btn-sm">@Model.MemoryCapacity</button>
                                </div>
                                <div class="col-xs-6" style="margin-left: 55px;">
                                    <span class="product_options">Depolama</span><br>
                                    <button class="btn btn-primary btn-sm">@Model.DiscCapacity</button>
                                </div>
                            </div>
                        </div>
                        <hr class="singleline">
                        <div class="order_info d-flex flex-row">
                            <form action="#"> </form>
                        </div>
                        
                        <div class="col-xs-6">
                            <form id="@Model.Id" asp-page="/Cart" method="post">
                                <div class="product_quantity">
                                    <span>Adet: </span> <input id="quantity_input" type="text" name="quantity">
                                </div>
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                                <button type="submit" class="btn btn-success my-2">Sepete Ekle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row row-underline" style="margin-top:50px">
            <div class="col-md-6"> <span class=" deal-text">Ürün Özellikleri</span> </div>
            <div class="col-md-6"> <a href="#" data-abc="true"> <span class="ml-auto view-all"></span> </a> </div>
        </div>
        <style>
            td.col-md-4 {
                text-align: right;
            }
        </style>
        <div class="row">
            <div class="col-md-12">
                <table class="col-md-12">
                    <tbody>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Marka :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.Vendor</li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Model:</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li> @Model.Name </li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">İşlemci Markası :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.ProcessorVendor</li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">İşlemci :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.ProcessorType @Model.ProcessorType</li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Ekran Kartı :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.GraphicsCard</li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Bellek Kapasitesi:</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.MemoryCapacity</li>
                                </ul>
                            </td>
                        </tr>

                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Disk Kapasitesi :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.DiscCapacity</li>
                                </ul>
                            </td>
                        </tr>

                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">SKU :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.SKU.Substring(0, 8).ToUpper()</li>
                                </ul>
                            </td>
                        </tr>

                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Açıklama :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.Description</li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>


