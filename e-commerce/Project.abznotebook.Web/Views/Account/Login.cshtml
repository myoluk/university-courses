@model UserLoginViewModel
@{
    Layout = "_AccountLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>abz | Giriş Yap</title>
</head>
<body>

    <div class="container">
        <div class="row my-4">
            <div class="col-md-4 offset-md-4 my-4">
                <form asp-action="Login">
                    <div class="card card-default shadow">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-3">
                                    <h3>
                                        <span class="fa fa-sign-in fa-3x"></span>
                                    </h3>
                                </div>
                                <div class="col-md-9 text-right">
                                    <h2> Giriş Yap</h2>
                                    <small>
                                        Kullanıcı adınızı ve şifrenizi giriniz.
                                    </small>

                                </div>
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                                <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adı" />
                            </div>
                            <div class="form-group">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input asp-for="Password" class="form-control" placeholder="Şifre" />
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <a asp-action="Register" class="btn btn-link">Kayıt Ol</a>
                            <button class="btn btn-success" type="submit" asp-route-data=@TempData["status"]>
                                <span class="fa fa-sign-in mr-2"></span> Giriş Yap
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


</body>
</html>
