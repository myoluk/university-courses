@model IQueryable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<h3 class="text-center my-3"> "@ViewBag.Searched" ile ilgili bulunan sonuçlar</h3>
<div class="container-fluid">
    <div class="row">

        @if (Model.Count() == 0)
        {
            <h3 class="text-center my-3 text-danger">Herhangi bir sonuç bulunamadı.</h3>
        }
        else
        {
            <hr/>
            @foreach (var product in Model)
            {
                <partial name="ProductSummary" model="product" />
            }
        }

    </div>
</div>