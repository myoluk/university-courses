<div style="border-bottom:1px solid lightgray; padding-bottom:30px">
    <h1 style="width:100%; text-align:center">Kategori Ekle</h1>
</div>

<div class="container" style="width:80%; text-align:left">
    <div class="row my-4">
        <div class="card-body">

            <form class="w-75 mx-auto p-3" method="post" asp-action="AddCategory">

                <div class="form-group">
                    <label asp-for="Name">Ad</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Description">Tanım</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div style="width:100%; text-align:right">
                    <button type="submit" class="btn btn-outline-success">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>
