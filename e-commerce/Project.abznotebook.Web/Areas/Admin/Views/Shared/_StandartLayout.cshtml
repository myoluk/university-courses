                        </div>
                    </div>

                    <div class="mt-2 mb-2">
                        <div class="custom-control custom-checkbox" style="padding:0">
                            <a class="btn btn-primary" asp-controller="Operations" asp-action="Customer" style="width:80%"><i class="fa fa-user-circle"></i> Kullanıcı İşlemleri</a>
                        </div>
                    </div>

                </div>


                <div class="filter filter-last">
                    <div class="mt-2 mb-2">
                        <div class="custom-control custom-checkbox" style="padding:0">
                            <a href="../../account/logout" class="btn btn-danger" style="width:80%"><i class="fa fa-hourglass-end"></i> Oturumu Kapat</a>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-md-9" style="border: solid 1px lightgray; border-radius: 7px; padding-top:30px; margin-bottom:50px">

                @RenderBody()

            </div>
        </div>
    </div>





























