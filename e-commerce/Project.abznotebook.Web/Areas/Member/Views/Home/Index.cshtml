@model AppUser
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_StandartLayout.cshtml";
}

<body>

<div style="border-bottom:1px solid lightgray; padding-bottom:30px">
    <h1 style="width:100%; text-align:center">Hesap Bilgilerim</h1>
</div>

<div class="container" style="width:50%; text-align:left">
    <div class="row my-4">
        <div class="card-body">
            <div class="form-group">
                <label>Ad:</label>
                <input class="form-control" placeholder="Ad" value="@Model.Name" />
            </div>

            <div class="form-group">
                <label>Soyad:</label>
                <input class="form-control" placeholder="Soyad" value="@Model.Surname" />
            </div>

            <div class="form-group">
                <label>E-posta adresi:</label>
                <input class="form-control" placeholder="E-posta adresi" value="@Model.Email" />
            </div>

            <div class="form-group">
                <label>Telefon:</label>
                <input class="form-control" placeholder="Telefon" value="@Model.PhoneNumber" />
            </div>

            <div style="width:100%; text-align:right">
                <button class="btn btn-success text-right mt-3" type="submit"><i class="fa fa-refresh"></i> Güncelle</button>
            </div>
        </div>

    </div>
</div>

</body>