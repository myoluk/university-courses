@model Project.abznotebook.Web.Areas.Member.Models.AddAddressViewModel

@{
    ViewData["Title"] = "AddAddress";
    Layout = "~/Areas/Member/Views/Shared/_StandartLayout.cshtml";
}

<div style="border-bottom:1px solid lightgray; padding-bottom:30px">
    <h1 style="width:100%; text-align:center">Adres Ekle</h1>
</div>

<div class="container" style="width:50%; text-align:left">
    <div class="row my-4">
        <div class="card-body">
            <form asp-action="AddAddress">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label">Adres Başlığı</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City" class="control-label">Şehir</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="District" class="control-label">İlçe</label>
                    <input asp-for="District" class="form-control" />
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AddressLine" class="control-label">Adres</label>
                    <input asp-for="AddressLine" class="form-control" />
                    <span asp-validation-for="AddressLine" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Neighborhood" class="control-label">Mahalle</label>
                    <input asp-for="Neighborhood" class="form-control" />
                    <span asp-validation-for="Neighborhood" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label">Posta Kodu</label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <div style="width:100%; text-align:right">
                        <a asp-action="Index" class="btn btn-primary pr-4">Adreslerime Dön</a>
                        @*<input type="submit" value="Ekle" class="btn btn-primary text-right mt-3" />*@
                        <button class="btn btn-success" type="submit"><i class="fa fa-save"></i> Ekle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



